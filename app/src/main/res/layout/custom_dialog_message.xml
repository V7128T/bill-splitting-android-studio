<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proto_mono_light"
                android:gravity="left"
                android:padding="16dp"
                android:text="Confirm to DELETE all the history?"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialogMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proto_mono_light"
                android:gravity="left"
                android:padding="16dp"
                android:text="Message here"
                android:textColor="@color/redCherry"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:fontFamily="@font/proto_mono_medium"
                android:padding="12dp"
                android:text="YES"
                android:textColor="@color/terminalGreen"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:fontFamily="@font/proto_mono_medium"
                android:padding="12dp"
                android:text="cancel"
                android:textColor="@color/redCherry" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>